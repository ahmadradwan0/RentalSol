@model Rental.Models.ViewModels.Customer.NewCustomerViewModel

@{
    ViewBag.Title = "RegisterCustomerFrom";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("RegisterCustomer", "Customers", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
        <span class="error-message">
            @Html.ValidationMessageFor(m => m.Customer.Name)
        </span>
        
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Email)
        @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" })
        <span class="error-message">
            @Html.ValidationMessageFor(m => m.Customer.Email)
        </span>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Password)
        @Html.PasswordFor(m => m.Customer.Password, new { @class = "form-control" })
        <span class="error-message">
            @Html.ValidationMessageFor(m => m.Customer.Password)
        </span>
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter) Subscribe : 
        </label>

    </div>


    <div class="form-group">
        
        @Html.DropDownListFor(m => m.Customer.SelectedMembershipTypeId, new SelectList(Model.MembershipTypes,"Id", "SubscribtionName"), "Select ", new { @class = "form-control" })
        <span class="error-message">
            @Html.ValidationMessageFor(m => m.Customer.SelectedMembershipTypeId)
        </span>
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Register</button>

  
}